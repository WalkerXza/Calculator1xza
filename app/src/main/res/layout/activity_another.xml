<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#010001"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="单位转换"
        android:textColor="#3F51B5"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:textSize="9dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/editText" />

    <Button
        android:id="@+id/btn_77"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="17dp"
        android:text="7"
        android:background="@drawable/button_style_2"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_88"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        android:background="@drawable/button_style_2"
        android:layout_alignTop="@+id/btn_77"
        android:layout_alignBottom="@+id/btn_77"
        android:layout_toEndOf="@+id/btn_77"
        android:layout_marginLeft="15dp" />

    <Button
        android:id="@+id/btn_99"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="9"
        android:background="@drawable/button_style_2"
        android:layout_alignTop="@+id/btn_88"
        android:layout_alignBottom="@+id/btn_88"
        android:layout_toStartOf="@+id/btn_back"
        android:layout_marginEnd="11dp" />

    <Button
        android:id="@+id/btn_cf"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="℃→℉"
        android:background="@drawable/button_style_4"
        android:layout_alignTop="@+id/btn_99"
        android:layout_alignBottom="@+id/btn_99"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_44"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        android:background="@drawable/button_style_2"
        android:layout_below="@+id/btn_77"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_55"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        android:background="@drawable/button_style_2"
        android:layout_alignTop="@+id/btn_44"
        android:layout_alignBottom="@+id/btn_44"
        android:layout_alignStart="@+id/btn_88" />

    <Button
        android:id="@+id/btn_66"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        android:background="@drawable/button_style_2"
        android:layout_alignTop="@+id/btn_55"
        android:layout_alignBottom="@+id/btn_55"
        android:layout_alignStart="@+id/btn_99" />

    <Button
        android:id="@+id/btn_fc"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="℉→℃"
        android:background="@drawable/button_style_4"
        android:layout_alignTop="@+id/btn_66"
        android:layout_alignBottom="@+id/btn_66"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_11"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:text="1"
        android:background="@drawable/button_style_2"
        android:layout_below="@+id/btn_44"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_22"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        android:background="@drawable/button_style_2"
        android:layout_alignTop="@+id/btn_11"
        android:layout_alignBottom="@+id/btn_11"
        android:layout_alignStart="@+id/btn_55" />

    <Button
        android:id="@+id/btn_33"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        android:background="@drawable/button_style_2"
        android:layout_alignTop="@+id/btn_22"
        android:layout_alignBottom="@+id/btn_22"
        android:layout_alignStart="@+id/btn_66" />

    <Button
        android:id="@+id/btn_dr"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="$→¥"
        android:background="@drawable/button_style_4"
        android:layout_alignTop="@+id/btn_33"
        android:layout_alignBottom="@+id/btn_33"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_00"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="0"
        android:background="@drawable/button_style_2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_22"
        android:layout_alignStart="@+id/btn_22" />

    <Button
        android:id="@+id/btn_10to2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="10→2"
        android:background="@drawable/button_style_4"
        android:layout_alignTop="@+id/btn_00"
        android:layout_alignBottom="@+id/btn_00"
        android:layout_alignStart="@+id/btn_33" />

    <Button
        android:id="@+id/btn_rd"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="¥→$"
        android:background="@drawable/button_style_4"
        android:layout_alignTop="@+id/btn_10to2"
        android:layout_alignBottom="@+id/btn_10to2"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_cc"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="c"
        android:background="@drawable/button_style_2"
        android:layout_alignTop="@+id/btn_00"
        android:layout_alignBottom="@+id/btn_00"
        android:layout_alignParentStart="true" />

</RelativeLayout>